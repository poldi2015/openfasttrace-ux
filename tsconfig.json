{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "types": ["jquery","node"],            // Include jQuery types
    "typeRoots": ["node_modules/@types"], // Specify where to find type definitions
    "outDir": "build/dist",
    "baseUrl": ".",
    "paths": {
      "@main/*": ["src/main/js/*"],
      "@tools/*": ["src/tools/js/*"]
    }
  },
  "include": [
    "src",
    "node_modules/vitest/globals.d.ts"
  ]
}
