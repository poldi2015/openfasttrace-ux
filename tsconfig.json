{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jquery","node"],            // Include jQuery types
    "typeRoots": ["node_modules/@types"], // Specify where to find type definitions
    "outDir": "build/dist"
  },
  "include": ["src"]
}
